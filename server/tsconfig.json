{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types.d.ts"],
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "client",
    "dist",
    "node_modules"
  ]
}